<div class="container">

    <div class="searchflexcont">
        {{input class = "form-control" type = "text" value= searchdata  }}
        <button class="btn btn-primary" onclick={{action "search" searchdata}}>Search</button>
    </div>



    <table class="table table-dark table-striped">
        <thead>
            <th>ID</th>
            <th>Process Name</th>
            <th>Handles</th>
            <th>VM</th>
            <th>WS</th>
            <th>PM</th>
            <th>NPM</th>
            <th></th>
        </thead>



        <tbody>
            {{#each arrayOfProc as |dataobj|}}
            <tr>
                <td>{{dataobj.id}}</td>
                <td>{{dataobj.ProcessName}}</td>
                <td>{{dataobj.handles}}</td>
                <td>{{dataobj.vm}}</td>
                <td>{{dataobj.ws}}</td>
                <td>{{dataobj.pm}}</td>
                <td>{{dataobj.npm}}</td>
                <button class="btn btn-success" onclick={{action "getMore" dataobj.id}}>Get More Info</button>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>